files:
    "/sbin/appstart" :
        mode: "000755"
        owner: webapp
        group: webapp
        content: |
            #!/usr/bin/env bash
            JAR_PATH=/var/app/current/application.jar

            # run app
            killall java
            java -Dfile.encoding=UTF-8 -jar $JAR_PATH
    "/opt/elasticbeanstalk/tasks/taillogs.d/my-app.conf" :
        mode: "000644"
        owner: webapp
        group: webapp
        content: |
          /var/log/myapp.log
    "/opt/elasticbeanstalk/tasks/bundlelogs.d/my-app.conf" :
        mode: "000644"
        owner: webapp
        group: webapp
        content: |
          /var/log/myapp.log
